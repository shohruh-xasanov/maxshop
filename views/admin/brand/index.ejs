
  <div class="row">
  <div class="col-12">
    <div style="
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      ">
      <h4 class="m-3" style="font-weight: 700">Brandlar uchun ro'yhat</h4>
      <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal"
        data-target=".bs-example-modal-lg">
        Yaratish
      </button>
    </div>
 

    <div class="card m-b-30">
      <div class="card-body">
        <table id="datatable" class="table table-bordered text-center"
          style="border-collapse: collapse; border-spacing: 0; width: 100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Название</th>
              <th>Yaratilgan sana</th>
              <th style="width: 15%">Sozlamalar</th>
            </tr>
          </thead>

          <tbody>
            <% for(let item of brand) {%>
              <tr>
                <td>
                  <%= item.name.uz %>
                </td>
                <td>
                  <%= item.name.ru %>
                </td>
                <td>
                  <%= moment(item.createdAt).format("DD-MM-YYYY - hh:mm:ss") %>
                </td>
                <td style="
                  display: flex;
                  flex-direction: row;
                  justify-content: space-around;
                  align-items: center;
                ">
                  
                  <a class="btn btn-warning" href="<%=`/api/brand/${item._id}`%>">
                    <i class="icofont-binary"></i>
                  </a>
                  <form method="POST" class="hidden-r" action="<%=`/api/brand/${item._id}?_method=DELETE`%>">
                    <button type="submit" class="btn btn-danger">
                      <i class="icofont-bin"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- end col -->
</div>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mt-0" id="myLargeModalLabel">Yaratish</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/api/brand/create" method="POST" >
          <div class="mb-3">
            <label for="">Name </label>
            <input type="text" name="nameuz" class="form-control"  />
          </div>
          <div class="mb-3">
            <label for="">Название </label>
            <input type="text" name="nameru" class="form-control"  />
          </div>
          <button type="submit" class="btn btn-primary">Saqlash</button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
